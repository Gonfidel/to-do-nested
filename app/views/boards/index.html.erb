<p id="notice"><%= notice %></p>


</div class="ui middle aligned aligned grid">
  <div class="ui main container">
  <h1>Boards</h1>
    <table class="ui selectable left aligned table small ">
      <thead>
        <tr class="ui selectabled black">
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @boards.each do |board| %>
          <tr class="ui left aligned table gray">
            <td><%= link_to board.name, board_lists_path(board_id: board.id), :class => "ui button primary" %></td>
            <td><%= link_to 'Edit', edit_board_path(board), :class => "ui button primary"  %></td>
            <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?'}, :class => "ui button primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Board', new_board_path, :class => "ui button primary aligned center" %>

  </div>
</div>